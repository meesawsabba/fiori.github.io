<core:FragmentDefinition
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:control="sap.fe.core.controls"
	template:require="{
							FIELD: 'sap/fe/macros/field/FieldHelper',
							MODEL: 'sap/ui/model/odata/v4/AnnotationHelper',
							UI: 'sap/fe/core/templating/UIFormatters',
							Property: 'sap/fe/core/templating/PropertyFormatters'
						 }"
>
	<template:if test="{= (${property>$Path/$Type} === 'Edm.String') &amp;&amp;	${property>$Path@com.sap.vocabularies.UI.v1.MultiLineText} }">
		<template:then>
			<Text text="{this>text}" width="100%" />
		</template:then>
		<template:elseif test="{= ${this>formatOptions/isAnalytics} &amp;&amp; ${property>@@Property.hasUnitOrCurrency} }">
				<control:ConditionalWrapper condition="{= UI.hasValidAnalyticalCurrencyOrUnit(${property>$Path@@UI.getDataModelObjectPath})}">
					<control:contentTrue>
						<Text text="{this>text}" />
					</control:contentTrue>
					<control:contentFalse>
						<Text text="*" />
					</control:contentFalse>
				</control:ConditionalWrapper>
		</template:elseif>
		<template:else>
			<Text text="{this>text}" />
		</template:else>
	</template:if>


</core:FragmentDefinition>
