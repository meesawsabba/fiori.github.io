<mvc:View
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    id="ConditionView"
    >
  <m:VBox
      class="sapUiSmallMargin"
      id="CPBbox"
      >
    <f:SimpleForm
        title="{i18n>PROPERTIES}"
        id="ITF1Form"
        editable="true"
        labelSpanXL= "3"
        labelSpanL ="3"
        labelSpanM ="3"
        labelSpanS ="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="4"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        >
      <f:content>
      <m:Label
        id="COND-LABEL1"
        text="{i18n>txt_description}"
        labelFor="COND-DESCR"
        />
    <m:Input
        placeholder="{i18n>Description}"
        id="COND-DESCR"
        value="{Condition>/Description}"
        />
        <m:Label
            id="COND-LABEL2"
            labelFor="COND-MEASURE"
            text="{Condition>/Structure1}"
            />
        <m:Select
            id="COND-MEASURE"
            selectedKey="{Condition>/measure1}"
            items="{Condition>/Members1}"
            >
          <core:Item
              id="COND-MEASURE1-ITEM"
              text="{Condition>Description}"
              key="{Condition>Name}"
              />
        </m:Select>
        <m:Label
            id="COND-LABEL3"
            visible="{=!!${Condition>/Structure2}}"
            labelFor="COND-MEASURE2"
            text="{Condition>/Structure2}"
            />
        <m:Select
            visible="{=!!${Condition>/Structure2}}"
            id="COND-MEASURE2"
            selectedKey="{Condition>/measure2}"
            items="{Condition>/Members2}"
            >
          <core:Item
              id="COND-MEASURE2-ITEM"
              text="{Condition>Description}"
              key="{Condition>Name}"
              />
        </m:Select>
        <m:Label
            labelFor="COND-OPER"
            text="{i18n>Operator}"
            id="COND-LABEL4"
            />
        <m:Select
            id="COND-OPER"
            selectedKey="{Condition>/operator}"
            >
          <core:Item
              id="COND-ITEM5"
              text="{i18n>OperatorEqual}"
              key="="
              />
          <core:Item
              id="COND-ITEM6"
              text="{i18n>OperatorNotEqual}"
              key="&lt;&gt;"
              />
          <core:Item
              id="COND-ITEM7"
              text="{i18n>OperatorLessThan}"
              key="&lt;"
              />
          <core:Item
              id="COND-ITEM8"
              text="{i18n>OperatorGreaterThan}"
              key="&gt;"
              />
          <core:Item
              id="COND-ITEM9"
              text="{i18n>OperatorLessOrEqual}"
              key="&lt;="
              />
          <core:Item
              id="COND-ITEM10"
              text="{i18n>OperatorGreaterOrEqual}"
              key="&gt;="
              />
          <core:Item
              id="COND-ITEM11"
              text="{i18n>OperatorTopN}"
              key="TOP_N"
              />
          <core:Item
              id="COND-ITEM1"
              text="{i18n>OperatorBottomN}"
              key="BOTTOM_N"
              />
          <core:Item
              id="COND-ITEM2"
              text="{i18n>OperatorTopPer}"
              key="TOP_PERCENT"
              />
          <core:Item
             id="COND-ITEM3"
              text="{i18n>OperatorBottomPer}"
              key="BOTTOM_PERCENT"
              />
          <core:Item
             id="COND-ITEM4"
              text="{i18n>OperatorTopSUM}"
              key="TOP_SUM"
              />
        </m:Select>
        <m:Label
            id="COND-LABEL5"
            labelFor="COND-V1"
            text="{i18n>VALUE}"
            />
        <m:Input
            id="COND-LABEL6"
            value="{Condition>/Value}"
            placeholder="{i18n>EnterThresholdValue}"
            type="Number"
            />
        <m:Label
            id="COND-LABEL7"
            labelFor="COND-V1"
            text="{i18n>TO_VALUE}"
            />
      </f:content>
    </f:SimpleForm>
  </m:VBox>
</mvc:View>
