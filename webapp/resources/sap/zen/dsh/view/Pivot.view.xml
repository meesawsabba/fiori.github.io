<mvc:View controllerName="sap.zen.dsh.controller.Pivot"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:eg="sap.sac.grid"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    resourceBundleName="sap.zen.dsh.messagebundle"
    resourceBundleAlias="i18n"
    busyIndicatorDelay="1"
    id="PivotView">
    <eg:Grid id="theEasyGrid"
        virtualRows="{om>/dataProvider/0/Grid/virtualRows}"
        virtualColumns="{om>/dataProvider/0/Grid/virtualColumns}"
        fixedRows="{om>/dataProvider/0/Grid/fixedRows}"
        fixedColumns="{om>/dataProvider/0/Grid/fixedColumns}"
        format="{om>/dataProvider/0/format}"
        input="{om>/dataProvider/0/Grid/input}"
        cells="{path:'om>/dataProvider/0/Grid/Cells',templateShareable:true}"
        rightClick="onRightClick"
        requestMoreRows="requestRows"
        columnLimit="{om>/colLimit}"
        rowLimit="{om>/rowLimit}"
        requestMoreColumns="requestColumns"
        drill="onDrill">
        <eg:Cell id="dataCell"
            row="{om>Row}"
            column="{om>Column}"
            inputEnabled="{om>Input}"
            tooltip="{om>tooltip}"
            displayValue="{om>DisplayValue}"
            displayLevel="{om>DisplayLevel}"
            cellType="{om>Semantic}"
            alertLevel="{om>AlertLevel}"
            valueState="{om>valueState}"
            icon="{om>Icon}"
            helpId="{om>DataValueId}"
            app:cellMember="{om>Member}"
            semanticClass="{om>SemanticClass}"
            app:cellEltuid="{om>Member2}"
            app:dataValueId="{om>DataValueId}"
            app:cellValueType="{om>cellValueType}"
            app:cellDimension="{om>Dimension}"
            app:cellDimensionOther="{om>DimensionOther}"
            app:cellAttribute="{om>cellAttribute}"
            app:tupleIndex="{om>TupleIndex}"
            app:dataCell="{om>dataCell}"
            app:position="{om>position}"
            app:dataRow="{om>DataRow}"
            app:dataColumn="{om>DataColumn}" />
    </eg:Grid>
</mvc:View>
