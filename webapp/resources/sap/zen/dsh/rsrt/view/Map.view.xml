<mvc:View
    controllerName="sap.zen.dsh.rsrt.controller.Map"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:vbm="sap.ui.vbm"
    class="sapUiZenCommonsSize"
    height="100%"
    width="100%"
    id="map"
    >
  <vbm:GeoMap
      id="vbi"
      class="sapUiZenCommonsSize"
      initialPosition="0;10;0"
      width="100%"
      height="100%"
      openWindow="onOpenDetail"
      >
    <vbm:vos>
      <vbm:Areas
          id="Areas"
          items="{om>/dataProvider/0/Map/areas}"
          >
        <vbm:Area
            id="Area"
            position="{om>position}"
            color="rgba(0,0,0,0.2)"
            tooltip="{om>tooltip}"
            />
      </vbm:Areas>
      <vbm:Circles
          id="Circles"
          items="{om>/dataProvider/0/Map/circles}"
          >
        <vbm:Circle
            id="circle"
            position="{om>position}"
            radius="{om>count}"
            color="rgba(92,186,230,0.6)"
            colorBorder="rgb(255,255,255)"
            hotDeltaColor="rgba(92,186,230,0.8)"
            tooltip="{om>tooltip}"
            />
      </vbm:Circles>
    </vbm:vos>
    <vbm:vos>
      <vbm:Spots
          id="Spots"
          items="{om>/dataProvider/0/Map/spots}"
          >
        <vbm:Spot
            id="Spot"
            position="{om>position}"
            labelPos="5"
            app:member="{om>dim}"
            app:spotInfo="{om>spotInfo}"
            labelType="Default"
            labelText="{om>dimText}"
            labelArrow="true"
            handleClick="onSpotClick"
            click="onSpotClick"
            />
      </vbm:Spots>
    </vbm:vos>
  </vbm:GeoMap>
</mvc:View>
